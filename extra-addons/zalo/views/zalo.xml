<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
			<record id="zalo_zalo_view_form" model="ir.ui.view">
			<field name="name">zalo_zalo.view.form</field>
			<field name="model">zalo.zalo</field>
			<field name="arch" type="xml">
				<form string="zalo">
					<sheet>
						<group>
							<field name="zalo_id" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="zalo_zalo_view_tree" model="ir.ui.view">
			<field name="name">zalo_zalo.view.tree</field>
			<field name="model">zalo.zalo</field>
			<field name="arch" type="xml">
				<tree string="zalo">
					<field name="zalo_id" />
				</tree>
			</field>
		</record>
		<!-- view zalo -->
			<record id="zalo_users_view_form" model="ir.ui.view">
			<field name="name">zalo_users.view.form</field>
			<field name="model">zalo.users</field>
			<field name="arch" type="xml">
				<form string="users">
					<sheet>
						<group>
							<field name="users_id" />
							<field name="name" />
							<field name="introduces" />
							<field name="age" />
							<field name="gender" />
							<field name="manager_image" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="users_view_tree" model="ir.ui.view">
			<field name="name">users.view.tree</field>
			<field name="model">zalo.users</field>
			<field name="arch" type="xml">
				<tree string="users">
					<field name="users_id" />
					<field name="name" />
					<field name="introduces" />
					<field name="age" />
					<field name="gender" />
					<field name="manager_image" />
				</tree>
			</field>
		</record>
		<!-- acction view -->
        <record id="zalo_action" model="ir.actions.act_window">
            <field name="name">zalo</field>
            <field name="res_model">zalo.zalo</field>
            <field name="view_mode">tree,form</field>
        </record>
		<record id="users_action" model="ir.actions.act_window">
			<field name="name">users</field>
			<field name="res_model">zalo.users</field>
			<field name="view_mode">tree,form</field>
		</record>
		<menuitem id="zalo_menu" name="zalo" sequence="4" />
		<menuitem id="zalo_manager_menu" name="manager" action="zalo_action" parent="zalo_menu" /> 
		<menuitem id="zalo_users_menu" name="zalo config " action="users_action" parent="zalo_menu" />
	</data>
</odoo>
